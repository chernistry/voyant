{
  "name": "voyant-travel-assistant",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/api/server.ts",
    "cli": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest --runInBand",
    "test:transcripts": "RECORD_TRANSCRIPTS=true jest --runInBand",
    "test:weather": "jest --runInBand --testNamePattern=\"weather|misspelled|abbreviation\"",
    "test:packing": "jest --runInBand --testNamePattern=\"packing\"",
    "test:attractions": "jest --runInBand --testNamePattern=\"attractions\"",
    "test:context": "jest --runInBand --testNamePattern=\"switch\"",
    "test:multilingual": "jest --runInBand --testNamePattern=\"language|Spanish\"",
    "test:clarification": "jest --runInBand --testNamePattern=\"clarifier|refinement\"",
    "test:edge": "jest --runInBand --testNamePattern=\"typos|emojis|thread|leakage|non-existent|long messages\"",
    "generate-deliverables": "npm run test:transcripts",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "dependencies": {
    "brave-search": "^0.9.0",
    "chalk": "^5.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "markdown-it": "^14.1.0",
    "pino": "^9.0.0",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/chalk": "^0.4.31",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.42.0"
  }
}
